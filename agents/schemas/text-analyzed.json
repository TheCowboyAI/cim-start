{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Text Analyzed Event Schema",
  "description": "Schema for natural language processing analysis results",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "agent_id": {
      "type": "string",
      "description": "ID of the AI agent that analyzed the text"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When analysis was completed"
    },
    "input": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "Original text that was analyzed"
        },
        "language": {
          "type": "string",
          "description": "Detected or specified language code"
        },
        "source": {
          "type": "string",
          "description": "Source of the text (chat, email, form, etc.)"
        }
      },
      "required": ["text"]
    },
    "analysis": {
      "type": "object",
      "properties": {
        "sentiment": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string",
              "enum": ["positive", "negative", "neutral"]
            },
            "score": {
              "type": "number",
              "minimum": -1,
              "maximum": 1
            },
            "confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        },
        "entities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "type": { 
                "type": "string",
                "enum": ["PERSON", "ORGANIZATION", "LOCATION", "DATE", "MONEY", "OTHER"]
              },
              "start": { "type": "integer", "minimum": 0 },
              "end": { "type": "integer", "minimum": 0 },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "required": ["text", "type", "start", "end", "confidence"]
          }
        },
        "intent": {
          "type": "object",
          "properties": {
            "category": { "type": "string" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
            "parameters": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "relevance": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          }
        }
      }
    },
    "processing_time_ms": {
      "type": "number",
      "minimum": 0,
      "description": "Time taken to process the text"
    }
  },
  "required": ["event_id", "agent_id", "timestamp", "input", "analysis"]
}