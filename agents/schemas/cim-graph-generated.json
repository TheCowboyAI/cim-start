{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.cim.ai/events/cim-graph-generated.json",
  "title": "CIM Graph Generated Event Schema - CIM-Graph Compatible",
  "description": "Schema for CimGraphGenerated event following cim-graph library format",
  "type": "object",
  "required": [
    "event_id",
    "aggregate_id",
    "correlation_id",
    "causation_id",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique UUID for this event"
    },
    "aggregate_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUID of the domain aggregate this event belongs to"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUID correlating related events across the system"
    },
    "causation_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "UUID of the event that caused this event, or null if initial"
    },
    "payload": {
      "type": "object",
      "required": ["type", "CimGraphGenerated"],
      "properties": {
        "type": {
          "type": "string",
          "const": "Graph",
          "description": "Event payload type for graph events"
        },
        "CimGraphGenerated": {
          "type": "object",
          "required": ["graph_id", "domain_name", "file_path", "timestamp", "agent_session"],
          "properties": {
            "graph_id": {
              "type": "string",
              "format": "uuid",
              "description": "Unique identifier for the generated CIM graph"
            },
            "domain_name": {
              "type": "string",
              "pattern": "^[a-z0-9-]{3,50}$",
              "description": "Name of the domain this graph represents"
            },
            "file_path": {
              "type": "string",
              "description": "File system path where the CIM graph is stored"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "When the CIM graph was generated"
            },
            "agent_session": {
              "type": "object",
              "properties": {
                "agent_id": {"type": "string"},
                "session_id": {"type": "string"},
                "version": {"type": "string"}
              },
              "required": ["agent_id", "session_id", "version"]
            },
            "graph_metrics": {
              "type": "object",
              "properties": {
                "format_version": {
                  "type": "string",
                  "pattern": "^\\d+\\.\\d+\\.\\d+$",
                  "description": "Version of the CIM graph format used"
                },
                "entity_count": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Number of entities in the generated graph"
                },
                "component_count": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Number of components in the generated graph"
                },
                "relationship_count": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Number of relationships in the generated graph"
                },
                "complexity_score": {
                  "type": "string",
                  "enum": ["low", "medium", "high"],
                  "description": "Assessed complexity level of the domain graph"
                }
              },
              "required": ["format_version", "entity_count", "component_count", "relationship_count"]
            },
            "validation": {
              "type": "object",
              "properties": {
                "cim_compliant": {"type": "boolean"},
                "invariants_satisfied": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "validation_timestamp": {
                  "type": "string",
                  "format": "date-time"
                }
              },
              "required": ["cim_compliant", "invariants_satisfied", "validation_timestamp"]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}