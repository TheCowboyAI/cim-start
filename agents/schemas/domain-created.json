{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.cim.ai/events/domain-created.json",
  "title": "Domain Created Event Schema - CIM-Graph Compatible", 
  "description": "Schema for DomainCreated event following cim-graph library format",
  "type": "object",
  "required": [
    "event_id",
    "aggregate_id",
    "correlation_id", 
    "causation_id",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique UUID for this event"
    },
    "aggregate_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUID of the domain aggregate this event belongs to"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUID correlating related events across the system"
    },
    "causation_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "UUID of the event that caused this event, or null if initial"
    },
    "payload": {
      "type": "object",
      "required": ["type", "DomainCreated"],
      "properties": {
        "type": {
          "type": "string",
          "const": "Domain",
          "description": "Event payload type for domain events"
        },
        "DomainCreated": {
          "type": "object",
          "required": ["domain_id", "name", "purpose", "timestamp", "agent_session"],
          "properties": {
            "domain_id": {
              "type": "string",
              "format": "uuid",
              "description": "Unique identifier for the created domain"
            },
            "name": {
              "type": "string",
              "pattern": "^[a-z0-9-]{3,50}$",
              "description": "Domain name following CIM conventions"
            },
            "purpose": {
              "type": "string",
              "minLength": 10,
              "maxLength": 500,
              "description": "Clear description of domain scope and boundaries"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "When the domain was created"
            },
            "agent_session": {
              "type": "object",
              "properties": {
                "agent_id": {"type": "string"},
                "session_id": {"type": "string"},
                "version": {"type": "string"}
              },
              "required": ["agent_id", "session_id", "version"]
            },
            "cim_integration": {
              "type": "object",
              "properties": {
                "environment": {
                  "type": "string",
                  "enum": ["dev", "staging", "prod"]
                },
                "cim_graph_path": {"type": "string"},
                "nats_streams": {
                  "type": "object",
                  "properties": {
                    "events": {"type": "string"},
                    "commands": {"type": "string"},
                    "snapshots": {"type": "string"}
                  }
                }
              },
              "required": ["environment", "cim_graph_path"]
            },
            "validation": {
              "type": "object",
              "properties": {
                "cim_compliant": {"type": "boolean"},
                "invariants_satisfied": {
                  "type": "array",
                  "items": {"type": "string"}
                }
              },
              "required": ["cim_compliant", "invariants_satisfied"]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}